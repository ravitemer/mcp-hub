{
  "name": "mcp-hub",
  "version": "3.1.6",
  "description": "A manager server for MCP servers that handles process management and tool routing",
  "author": "Ravitemer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ravitemer/mcp-hub.git"
  },
  "keywords": [
    "mcp",
    "mcp-hub",
    "model-context-protocol",
    "mcp-servers-manager",
    "server",
    "process-management",
    "mcp-tool-routing"
  ],
  "files": [
    "dist/cli.js",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "mcp-hub": "dist/cli.js"
  },
  "scripts": {
    "start": "node ./src/utils/cli.js --port 3000 --config ~/mcp-hub/mcp-servers.json",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "node scripts/build.js",
    "postbuild": "chmod +x dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "update-data": "node scripts/update-data.js",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@vitest/coverage-v8": "^3.1.2",
    "chokidar": "^4.0.3",
    "esbuild": "^0.25.3",
    "express": "^5.1.0",
    "fast-deep-equal": "^3.1.3",
    "mock-fs": "^5.5.0",
    "nock": "^14.0.4",
    "nodemon": "^3.1.10",
    "open": "^10.1.1",
    "reconnecting-eventsource": "^1.6.4",
    "supertest": "^7.1.0",
    "uuid": "^11.1.0",
    "vitest": "^3.1.2",
    "yargs": "^17.7.2"
  }
}
