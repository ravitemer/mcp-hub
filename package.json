{
  "name": "mcp-hub",
  "version": "1.0.0",
  "description": "A manager server for MCP servers that handles process management and tool routing",
  "author": "Ravitemer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ravitemer/mcp-hub.git"
  },
  "keywords": [
    "mcp",
    "mcp-hub",
    "model-context-protocol",
    "mcp-servers-manager",
    "server",
    "process-management",
    "mcp-tool-routing"
  ],
  "files": [
    "src",
    "public",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
